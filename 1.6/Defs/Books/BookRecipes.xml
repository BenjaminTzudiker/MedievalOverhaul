<Defs>

	<RecipeDef Name="DankPyon_RecipeTreatiseBase" Abstract="True">
		<effectWorking>Sculpt</effectWorking>
		<workerCounterClass>MedievalOverhaul.RecipeWorker_MakeSkillBook</workerCounterClass>
		<recipeUsers>
			<li>DankPyon_Book_ScribeTable</li>
		</recipeUsers>
		<workSkill>Intellectual</workSkill>
		<workSpeedStat>ResearchSpeed</workSpeedStat>
		<workAmount>30000</workAmount> <!-- To be changed -->
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>DankPyon_Paper</li>
					</thingDefs>
				</filter>
				<count>50</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>DankPyon_Paper</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<DankPyon_Treatise>1</DankPyon_Treatise>
		</products>
		<unfinishedThingDef>DankPyon_UnfinishedBook</unfinishedThingDef>
	</RecipeDef>
	
