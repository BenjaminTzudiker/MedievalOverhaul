<Patch>

	<!-- Nightgrass -->
	<Operation Class="PatchOperationConditional">
		<xpath>Defs/ThingDef[defName = "Plant_Nightgrass"]/plant/harvestYield</xpath>
		<nomatch Class="PatchOperationAdd">
			<xpath>Defs/ThingDef[defName = "Plant_Nightgrass"]/plant</xpath>
			<value>
				<harvestYield/>
			</value>
